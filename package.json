  "description": "Claude Code Mailer - Smart email notifications for Claude Code with automatic hooks installation and multilingual templates",
  "main": "src/index.js",
  "bin": {
    "claude-code-mailer": "bin/claude-code-mailer.js"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "test": "node test/test.js",
