    "dotenv": "^16.4.5",
    "js-yaml": "^4.1.0",
    "nodemailer": "^6.9.15"
  },
  "devDependencies": {
    "jest": "^29.7.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "src/",
    "bin/",
    "config/",
